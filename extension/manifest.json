{
    "manifest_version": 3,
    "name": "Student Life Planner",
    "version": "1.0.0",
    "description": "Helps students manage assignments by scraping Canvas and prioritizing tasks",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "*://*.instructure.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.instructure.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}